@page
@model CRUD_NetRazor.Pages.ProfessorsView.IndexModel
@{
        ViewData["Title"] = "Lista de Profesores";
}

@if (Model.Message != null)
{
        <div class="alert alert-succes alert-dismissible fade show" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-6">
                <h2 class="text-secondary">LISTA DE PROFESORES</h2>
            </div>
            <div class="col-sm-6 btn-new">
                <a asp-page="CreateProfessor" class="btn btn-dark"> Nuevo Profesor</a>
            </div>
        </div>
    </div>
    <div class="card-body">
       <form method="post" >
            @if (Model.Professors.Count() > 0)
        {
            <table class="table table-hover">
            <thead>
                <tr>
                  <th scope="col">@Html.DisplayNameFor(m => m.Professors.First().Id)</th>
                  <th scope="col">@Html.DisplayNameFor(m => m.Professors.First().Name)</th>
                  <th scope="col">@Html.DisplayNameFor(m => m.Professors.First().Surname)</th>
                  <th scope="col">@Html.DisplayNameFor(m => m.Professors.First().Date_birth)</th>
                  <th scope="col">@Html.DisplayNameFor(m => m.Professors.First().Specialty)</th>
                  <th scope="col">@Html.DisplayNameFor(m => m.Professors.First().Admission_date)</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead>
              <tbody>
                  @foreach(var i in Model.Professors)
                  {
                    if (i.is_eliminated == false)
                    {
                        <tr>                        
                        <th scope="row">@Html.DisplayFor(m => i.Id)</th>
                            <td>@Html.DisplayFor(m => i.Name)</td>
                            <td>@Html.DisplayFor(m => i.Surname)</td>
                            <td>@Html.DisplayFor(m => i.Date_birth)</td>
                            <td>@Html.DisplayFor(m => i.Specialty)</td>
                            <td>@Html.DisplayFor(m => i.Admission_date)</td>
                        <td>
                            <a asp-route-id="@i.Id" asp-page="EditProfessor" class="btn btn-dark"> Editar </a>
                            <a asp-route-id="@i.Id" asp-page="DeleteProfessorPage" class="btn btn-dark">Eliminar</a>    
                        </td>
                        </tr>
                    }
                  }
              </tbody>
            </table>
        } else
        {
            <p>Aún no existen profesores registrados</p>
        }
       </form>        
    </div>
</div>